<odoo>
    <data>
        <record model="ir.ui.view" id="objective_form_view">
            <field name="name">objective.form</field>
            <field name="model">assessment.objective</field>
            <field name="arch" type="xml">
                <form string="Objective Form">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="description"/>
                            <field name="question"/>
                            <field name="enabled"/>
                        </group>
                        <group>
                            <field name="domain"/>
                            <field name="subdomain"/>
                            <field name="lesson"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>