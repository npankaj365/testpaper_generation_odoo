<odoo>
    <data>
        <record model="ir.ui.view" id="subdomain_form_view">
            <field name="name">subdomain.form</field>
            <field name="model">assessment.subdomain</field>
            <field name="arch" type="xml">
                <form string="Subdomain Form">
                <notebook>
                    <page string="SubDomain">
                        <group>
                            <field name="name"/>
                            <field name="description"/>
                            <field name="enabled"/>
                        </group>
                    </page>
                    <page string="Lesson">
                        <field name="lesson"/>
                    </page>
                </notebook>
                </form>
            </field>
        </record>
    </data>
</odoo>