<odoo>

    <report
        id="report_question_paper"
        model="assessment.test"
        string="Question Paper"
        name="assessment.report_question_paper_view"
        file="assessment.report_question_paper"
        report_type="qweb-html" />

    <template id="report_question_paper_view">
        <t t-call="web.html_container">
            <t t-call="web.internal_layout">
            <t t-foreach="docs" t-as="doc">
                <div class="page" style="border-style: black; border-color:black;">
                    <t t-foreach="doc.gen_question_list" t-as="question_item">
                        <div class="row" style="text-align:center;">
                            <ol>
                                <t t-if="question_item">
                                    <t t-if="type(question_item)=='str'">
                                        <span t-field="question_item"></span>
                                    </t>
                                    <t t-if="not type(question_item)=='str'">
                                        <li><span t-field="question_item.statement"></span></li>
                                    </t>
                                </t>
                            </ol>
                        </div>
                    </t>
                </div>
            </t>
            </t>
        </t>
    </template>
</odoo>

